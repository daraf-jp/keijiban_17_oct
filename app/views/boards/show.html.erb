<div class="wrapper">
  <div class="container">
    <div class="nav">
      <%= link_to "■掲示板に戻る■", boards_path %>
      <%= link_to "編集する", edit_board_path(@board) %>
    </div>
    <hr>
    <div class="board">
      <h1 class="board--name"><%= @board.name %></h1>
    </div>
    <hr>
    <%= form_for @comment, url: board_comments_path(@board, @comment) do |f| %>
      <%= f.text_field :from %>
      <%= f.text_field :email %>
      <%= f.text_area :content %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
