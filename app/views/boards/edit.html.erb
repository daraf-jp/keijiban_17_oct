<div class="wrapper">
  <div class="container">
    <div class="nav">
      <%= link_to "■掲示板に戻る■", boards_path %>
      <%= link_to "■スレッドに戻る■", board_path(@board) %>
      <%= link_to "削除する", board_path(@board), method: :delete, data: { confirm: "本当に削除しますか？" } %>
    </div>
    <hr>
    <div class="board">
      <h1 class="board--name"><%= @board.name %></h1>
    </div>
    <div class="form">
      <%= form_for @board do |f| %>
        <div>
          <div class="form--label">
            タイトル
          </div>
          <div class="form--input">
            <%= f.text_field :name %>
          </div>
        </div>
        <div>
          <div class="form--label">
            名前
          </div>
          <div class="form--input">
            <%= f.text_field :from %>
          </div>
        </div>
        <div>
          <div class="form--label">
            Email
          </div>
          <div class="form--input">
            <%= f.text_field :email %>
          </div>
        </div>
        <div>
          <div class="form--label">
            内容
          </div>
          <div class="form--input">
            <%= f.text_area :content %>
          </div>
        </div>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
